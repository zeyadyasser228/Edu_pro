            color: var(--kappel);
        }

        /* Course category */
        .course-category {
            color: var(--kappel);
        }

        /* Course meta icons */
        .course-meta i,
        .course-header .course-meta i,
        .course-includes li i {
            color: var(--kappel);
        }

        /* Course features checkmarks */
        .course-features li i {
            color: var(--kappel);
        }

        /* Breadcrumbs */
        .breadcrumbs a {
            color: var(--kappel);
        }

        /* Section headings */
        .course-description h2::after,
        .course-features h2::after {
            background-color: var(--kappel);
        }

        /* Course includes */
        .course-includes h3 {
            color: var(--text-color);
        }
