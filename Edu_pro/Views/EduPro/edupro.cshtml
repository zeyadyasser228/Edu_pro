    <style>
        /*-----------------------------------*\
                    #USER DROPDOWN
                \*-----------------------------------*/

        .user-dropdown {
            position: relative; /* Needed for absolute positioning of the menu */
            margin-left: 15px; /* Adjust spacing as needed */
        }

        .user-dropdown-toggle {
            display: flex;
            align-items: center;
            gap: 8px;
            background: none;
            border: none;
            cursor: pointer;
            font-family: var(--ff-poppins); /* Match other text */
            font-size: var(--fs-5); /* Adjust size as needed */
            color: var(--eerie-black-1);
            padding: 5px 10px;
            border-radius: var(--radius-5);
            transition: background-color var(--transition-1);
        }

            .user-dropdown-toggle ion-icon {
                font-size: 22px; /* Adjust icon size */
            }

            .user-dropdown-toggle .dropdown-arrow {
                font-size: 16px; /* Smaller arrow */
                transition: transform var(--transition-1); /* Smooth arrow rotation */
            }

                .user-dropdown-toggle .dropdown-arrow.up {
                    transform: rotate(180deg); /* Point arrow up when open */
                }

            .user-dropdown-toggle:hover,
            .user-dropdown-toggle:focus {
                background-color: var(--platinum); /* Subtle hover effect */
                outline: none; /* Remove default focus outline if needed */
            }

        .user-dropdown-menu {
            position: absolute;
            top: calc(100% + 10px); /* Position below the toggle with some gap */
            right: 0; /* Align to the right */
            background-color: var(--white);
            border-radius: var(--radius-5);
            box-shadow: var(--shadow-2);
            min-width: 200px; /* Adjust width as needed */
            padding: 10px 0;
            z-index: 1001; /* Ensure it's above other header elements */
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: opacity var(--transition-2), visibility var(--transition-2), transform var(--transition-2);
            border: 1px solid var(--light-gray); /* Optional border */
        }

            .user-dropdown-menu.show {
                opacity: 1;
                visibility: visible;
                transform: translateY(0);
            }

        .user-info-header {
            padding: 10px 15px;
            font-size: var(--fs-6);
            color: var(--gray-web);
            border-bottom: 1px solid var(--platinum);
            margin-bottom: 5px;
        }

            .user-info-header strong {
                color: var(--eerie-black-1);
                font-weight: var(--fw-500);
            }

        .user-dropdown-menu a,
        .user-dropdown-menu .logout-btn {
            display: block;
            padding: 10px 15px;
            color: var(--eerie-black-1);
            font-size: var(--fs-6);
            text-decoration: none;
            transition: background-color var(--transition-1), color var(--transition-1);
            background: none;
            border: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
            font-family: var(--ff-poppins); /* Ensure font consistency */
        }

            .user-dropdown-menu a ion-icon,
            .user-dropdown-menu .logout-btn ion-icon {
                margin-right: 8px;
                vertical-align: middle; /* Align icon better with text */
                font-size: 18px;
            }

            .user-dropdown-menu a:hover,
            .user-dropdown-menu .logout-btn:hover {
                background-color: var(--kappel_15);
                color: var(--kappel);
            }

        .dropdown-divider {
            height: 1px;
            background-color: var(--platinum);
            border: none;
            margin: 5px 0;
        }

        .logout-form {
            margin: 0; /* Reset form margin */
            padding: 0; /* Reset form padding */
        }

        .user-dropdown-menu .logout-btn {
            color: var(--radical-red); /* Make logout visually distinct */
            font-weight: var(--fw-500);
        }

            .user-dropdown-menu .logout-btn:hover {
                color: var(--white);
                background-color: var(--radical-red);
            }

        /* Responsive styles for dropdown */
        @@media (max-width: 991px) {
            .header-actions

        {
            flex-wrap: wrap;
            justify-content: flex-end;
        }

        .user-dropdown-menu {
            left: auto;
            right: 0;
            min-width: 250px;
        }

        }

        @@media (max-width: 768px) {
            .user-dropdown

        {
            margin-left: 5px;
        }

        .user-dropdown-toggle {
            padding: 3px 6px;
        }

            .user-dropdown-toggle span {
                display: none; /* Hide username text on mobile */
            }

        .user-dropdown-menu {
            min-width: 200px;
            right: -10px;
        }

        }

        @@media (max-width: 576px) {
            .user-dropdown-menu

        {
            right: -50px;
            min-width: 200px;
        }

        }
