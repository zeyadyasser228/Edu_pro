    <!-- Inline script for dropdown and search toggle -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Helper function
            const addEventOnElements = function (elements, eventType, callback) {
                if (elements) { // Check if elements exist
                    for (let i = 0, len = elements.length; i < len; i++) {
                        elements[i].addEventListener(eventType, callback);
                    }
                }
            }

            // User Dropdown Logic
            const userDropdown = document.querySelector('.user-dropdown');
            if (userDropdown) {
                const toggleButton = userDropdown.querySelector('.user-dropdown-toggle');
                const menu = userDropdown.querySelector('.user-dropdown-menu');
                const arrow = userDropdown.querySelector('.dropdown-arrow'); // Get the arrow icon

                toggleButton.addEventListener('click', function(e) {
                    e.stopPropagation(); // Prevent click from bubbling up to document
                    menu.classList.toggle('show');
                    arrow.classList.toggle('up'); // Toggle arrow direction
                });

                // Close dropdown when clicking outside
                document.addEventListener('click', function(e) {
                    if (!userDropdown.contains(e.target)) {
                        menu.classList.remove('show');
                        arrow.classList.remove('up'); // Reset arrow direction
                    }
                });
            }

            // Search Toggle Logic
            const searchToggle = document.getElementById('searchToggle');
            const searchContainer = document.getElementById('searchContainer');
            if (searchToggle && searchContainer) {
                searchToggle.addEventListener('click', function (e) {
                    e.stopPropagation();
                    searchContainer.classList.toggle('active');
                    this.classList.toggle('active'); // Toggle active class on button itself if needed for styling
                     // Optional: Focus the input when opening
                    if (searchContainer.classList.contains('active')) {
                         const searchInput = searchContainer.querySelector('.search-input');
                         if (searchInput) {
                             searchInput.focus();
                         }
                    }
                });
                 // Optional: Close search when clicking outside
                 document.addEventListener('click', function(e) {
                     if (!searchContainer.contains(e.target) && !searchToggle.contains(e.target)) {
                         searchContainer.classList.remove('active');
                         searchToggle.classList.remove('active');
                     }
                 });
            }

            // Mobile Nav Toggle Logic
            const navTogglers = document.querySelectorAll("[data-nav-toggler]");
            const navbar = document.querySelector("[data-navbar]");
            const overlay = document.querySelector("[data-overlay]");
            const toggleNav = function () {
                navbar.classList.toggle("active");
                overlay.classList.toggle("active");
                document.body.classList.toggle("nav-active"); // Optional: prevent body scroll
            }
            addEventOnElements(navTogglers, "click", toggleNav);

            // Header Active Logic
            const header = document.querySelector("[data-header]");
            const backTopBtn = document.querySelector("[data-back-top-btn]");
            window.addEventListener("scroll", function () {
                if (window.scrollY >= 100) {
                    header.classList.add("active");
                    if (backTopBtn) backTopBtn.classList.add("active"); // Check if backTopBtn exists
                } else {
                    header.classList.remove("active");
                    if (backTopBtn) backTopBtn.classList.remove("active"); // Check if backTopBtn exists
                }
            });
        });
    </script>

